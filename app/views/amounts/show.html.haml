.amount-body
  .amount-body__field
    .amount-body__field__title
      = "#{@objective.aim}" + "の記録一覧"
      .amount-body__field__title__mypage
        = link_to "マイページへ戻る", user_path(current_user.id), class: 'btn'
    .amount-body__field__logs
      - @amounts.each do |amount|
        .amount-body__field__logs__log
          .amount-body__field__logs__log__date
            = amount.created_at.strftime("%Y年%-m月%-d日")
          .amount-body__field__logs__log__amount
            = amount.amount.to_s + "#{@objective.unit}"
.footer
  continuation-diary